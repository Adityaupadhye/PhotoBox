<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.AScode.photobox">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_icon2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_icon2_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GalleryActivity"
            android:theme="@style/Images"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ImageViewerActivity"
            android:theme="@style/Images"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".WelcomeActivity"
            android:theme="@style/AppThemePicSelector"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".signUp_Activity"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ImageSelectorActivity"
            android:theme="@style/Images"
            android:screenOrientation="portrait"/>
    </application>

</manifest>