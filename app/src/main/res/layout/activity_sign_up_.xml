<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/signUpScroll"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundAll"
    tools:context=".signUp_Activity"
    >

    <include
        android:id="@+id/signupLoad"
        layout="@layout/custom_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/header"
        android:scaleType="centerCrop"
        android:contentDescription="@string/header"
        android:id="@+id/header"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/re_password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_box"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/password" />


    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_box"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/editext_box"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/editext_box"
        android:hint="@string/name"
        android:inputType="text"
        android:paddingStart="5dp"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/createAccount"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/re_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/login_button"
        android:onClick="signupUser"
        android:text="@string/create_account"
        android:textAllCaps="false"
        android:textColor="@color/backgroundAll"
        android:textSize="20sp"
        android:elevation="5dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/footer"
        android:scaleType="centerCrop"
        android:contentDescription="@string/footer"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
</ScrollView>



